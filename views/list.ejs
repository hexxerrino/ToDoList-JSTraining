<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">

  <%  newListItems.forEach((item) => { %>
  <form class="" action="/delete" method="post">
    <div class="item">
      <input type="checkbox" onChange="this.form.submit()" name="checkboxDelete" value="<%= item._id %>">
      <input name="taskListChecker" type="hidden" value="<%= senderPage %>">
      <p><%=  item.name  %></p>
    </div>
  </form>
  <%  }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%= senderPage %>">+</button>
  </form>
</div>

<%- include("footer") -%>
